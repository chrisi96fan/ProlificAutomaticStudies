{
  "manifest_version": 2,
  "name": "Prolific Studies Notifier",
  "version": "1.0.6",
  "description": "Firefox extension for Prolific to notify you when studies are available",
  "permissions": [
    "storage",
    "notifications",
    "tabs"
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Prolific get studies automatically"
  },
  "icons": {
    "16": "imgs/logo.png",
    "48": "imgs/logo.png",
    "128": "imgs/logo.png"
  },
  "applications": {
    "gecko": {
      "id": "{12345678-abcd-1234-ef56-123456789abc}",
      "strict_min_version": "91.0"
    }
  }
}
