{
  "manifest_version": 3,
  "name": "Prolific get studies automatically",
  "version": "0.8.1",
  "description": "Google extension for Prolific to notify you when studies are available",

  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "offscreen"
  ],
  "host_permissions": [
    "https://app.prolific.com/*",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.prolific.com/*"],
      "js": ["dist/popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "title": "Prolific get studies automatically"
  },
  "icons": {
    "16": "imgs/logo.png",
    "48": "imgs/logo.png",
    "128": "imgs/logo.png"
  }
}
